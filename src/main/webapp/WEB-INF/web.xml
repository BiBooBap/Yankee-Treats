<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>YankeeTreats</display-name>
  <welcome-file-list>
    <welcome-file>ProductView.jsp</welcome-file>
  </welcome-file-list>
  <resource-ref>
    <description>JNDI reference to a data source</description>
    <res-ref-name>jdbc/storage</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <servlet>
    <servlet-name>ProductControl</servlet-name>
    <servlet-class>com.example.control.ProductControl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProductControl</servlet-name>
    <url-pattern>/product</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>RegistrationControl</servlet-name>
    <servlet-class>com.example.control.RegistrationControl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegistrationControl</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>LoginControl</servlet-name>
    <servlet-class>com.example.control.LoginControl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginControl</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CartControl</servlet-name>
    <servlet-class>com.example.control.CartControl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CartControl</servlet-name>
    <url-pattern>/cart</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>LogoutControl</servlet-name>
    <servlet-class>com.example.control.LogoutControl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutControl</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>SaveAllUserData</servlet-name>
    <servlet-class>com.example.control.SaveAllUserData</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SaveAllUserData</servlet-name>
    <url-pattern>/SaveAllUserData</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ResendOTPServlet</servlet-name>
    <servlet-class>com.example.control.ResendOTPServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ResendOTPServlet</servlet-name>
    <url-pattern>/resendOTP</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>DeleteServlet</servlet-name>
    <servlet-class>com.example.control.DeleteServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeleteServlet</servlet-name>
    <url-pattern>/Delete</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CheckEmail</servlet-name>
    <servlet-class>com.example.control.CheckEmail</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CheckEmail</servlet-name>
    <url-pattern>/Check</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>InsertProductAdmin</servlet-name>
    <servlet-class>com.example.control.InsertProductAdmin</servlet-class>
    <multipart-config>
      <max-file-size>10485760</max-file-size> <!-- 10MB -->
      <max-request-size>20971520</max-request-size> <!-- 20MB -->
      <file-size-threshold>5242880</file-size-threshold> <!-- 5MB -->
    </multipart-config>
  </servlet>
  <servlet-mapping>
    <servlet-name>InsertProductAdmin</servlet-name>
    <url-pattern>/InsertProduct</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CheckoutServlet</servlet-name>
    <servlet-class>com.example.control.CheckoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CheckoutServlet</servlet-name>
    <url-pattern>/Checkout</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>GuestControl</servlet-name>
    <servlet-class>com.example.control.GuestControl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GuestControl</servlet-name>
    <url-pattern>/Guest</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>DownloadInvoiceServlet</servlet-name>
    <servlet-class>com.example.control.DownloadInvoiceServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DownloadInvoiceServlet</servlet-name>
    <url-pattern>/Download</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ShowOrderServlet</servlet-name>
    <servlet-class>com.example.control.ShowOrderServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ShowOrderServlet</servlet-name>
    <url-pattern>/ShowOrder</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ShowOrderAdmin</servlet-name>
    <servlet-class>com.example.control.ShowOrderAdmin</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ShowOrderAdmin</servlet-name>
    <url-pattern>/ShowOrderAdmin</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ProductDeleteControl</servlet-name>
    <servlet-class>com.example.control.ProductDeleteControl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProductDeleteControl</servlet-name>
    <url-pattern>/ProductDelete</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ProductAddControl</servlet-name>
    <servlet-class>com.example.control.ProductAddControl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProductAddControl</servlet-name>
    <url-pattern>/ProductAdd</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>SearchServlet</servlet-name>
    <servlet-class>com.example.control.SearchServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SearchServlet</servlet-name>
    <url-pattern>/Search</url-pattern>
  </servlet-mapping>
  <!---
  <filter>
    <filter-name>ErrorHandlingFilter</filter-name>
    <filter-class>com.example.control.ErrorHandlingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>ErrorHandlingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <error-page>
    <error-code>404</error-code>
    <location>/resources/jsp_pages/errors/404.jsp</location>
  </error-page>
  <error-page>
    <error-code>403</error-code>
    <location>/resources/jsp_pages/errors/403.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/resources/jsp_pages/errors/500.jsp</location>
  </error-page>
  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/resources/jsp_pages/errors/500.jsp</location>
  </error-page>
  !-->
</web-app>