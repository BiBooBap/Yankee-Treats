<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>YankeeTreats</display-name>
  <welcome-file-list>
    <welcome-file>ProductView.jsp</welcome-file>
  </welcome-file-list>
  <resource-ref>
    <description>JNDI reference to a data source</description>
    <res-ref-name>jdbc/storage</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <servlet>
    <servlet-name>ProductControl</servlet-name>
    <servlet-class>com.example.control.ProductControl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProductControl</servlet-name>
    <url-pattern>/product</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>RegistrationControl</servlet-name>
    <servlet-class>com.example.control.RegistrationControl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegistrationControl</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>LoginControl</servlet-name>
    <servlet-class>com.example.control.LoginControl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginControl</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CartControl</servlet-name>
    <servlet-class>com.example.control.CartControl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CartControl</servlet-name>
    <url-pattern>/cart</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>LogoutControl</servlet-name>
    <servlet-class>com.example.control.LogoutControl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutControl</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>BillingAddress</servlet-name>
    <servlet-class>com.example.control.BillingAddress</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BillingAddress</servlet-name>
    <url-pattern>/Billing</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>DeliveryAddress</servlet-name>
    <servlet-class>com.example.control.DeliveryAddress</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeliveryAddress</servlet-name>
    <url-pattern>/Delivery</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>PaymentMethods</servlet-name>
    <servlet-class>com.example.control.PaymentMethods</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PaymentMethods</servlet-name>
    <url-pattern>/Payment</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>DeleteServlet</servlet-name>
    <servlet-class>com.example.control.DeleteServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeleteServlet</servlet-name>
    <url-pattern>/Delete</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CheckEmail</servlet-name>
    <servlet-class>com.example.control.CheckEmail</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CheckEmail</servlet-name>
    <url-pattern>/Check</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>ErrorHandlingFilter</filter-name>
    <filter-class>com.example.control.ErrorHandlingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>ErrorHandlingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <error-page>
    <error-code>404</error-code>
    <location>/resources/jsp_pages/errors/404.jsp</location>
  </error-page>
  <error-page>
    <error-code>403</error-code>
    <location>/resources/jsp_pages/errors/403.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/resources/jsp_pages/errors/500.jsp</location>
  </error-page>
  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/resources/jsp_pages/errors/500.jsp</location>
  </error-page>
</web-app>